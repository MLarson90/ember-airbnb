<div class="panel panel-default">
  <div class="panel-heading">
    <h2 class="panel-title">{{rental.owner}}'s {{rental.type}} in {{rental.city}}</h2>
  </div>
      <div class="panel-body">
      <li>
  {{#link-to 'rental' rental.id}}{{rental.owner}}'s {{rental.type}}{{/link-to}} in {{rental.city}}
  {{#if isImageShowing}}
    <p><img src={{rental.image}} alt={{rental.type}} {{action 'imageHide'}}></p>
  {{else}}
      <button class="btn btn-primary" {{action 'imageShow'}}>See Image</button>
  {{/if}}
</li>
    </div>
</div>
