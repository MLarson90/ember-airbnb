{{#if addNewAnnouncement}}

<div class="panel panel-success">
  <div class="panel-heading">
    <h2 class="panel-title">New Rental</h2>
  </div>
  <div class="panel-body">
      <form>
        <div class="form-group">
          <label for="title">Announcement Title</label>
          {{input class="form-control" value=title id="title"}}
        </div>

        <div class="form-group">
          <label for="message">Message</label>
          {{input class="form-control" value=message id="message"}}
        </div>

        <button class="btn btn-success" {{action 'saveAnnouncement'}}>Save</button>
      </form>
    </div>
</div>
{{else}}
<div class="form-group">
  <button class="btn btn-success" {{action 'announcementFormShow'}}>Add New Announcement</button>
</div>
{{/if}}
